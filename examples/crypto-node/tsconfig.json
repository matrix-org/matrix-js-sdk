{
	"compilerOptions": {
		"target": "es2017",
		"module": "es2022",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noEmit": true,
		"declaration": true,
		"strict": true,
		"outDir": "./dist"
	},

	"ts-node": {
		"esm": true
	},

	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
