{
    "compilerOptions": {
        "target": "es2022",
        "experimentalDecorators": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noEmit": true,
        "declaration": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "lib": ["es2024"],
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/**/*.ts", "./spec/**/*.ts"]
}
